<li class="media">
  {{#link-to 'single-article' car.id}}
  <div class="well">
    <div class="media-left media-middle">
      <img src={{car.image}} alt={{car.title}} />
    </div>
    <div class="media-body">
      <h3 class="media-heading text-center">{{car.title}}</h3>
      <h5 class="media-heading text-center"><span>By {{car.author}}</span></h5>
      <hr>
      <p>{{car.subtitle}}</p>
    </div>
  </div>
  {{/link-to}}
</li>
