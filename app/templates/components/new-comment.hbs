{{#if addNewComment}}
<h1>New Comment</h1>
<div>
  <form>
    <div class="form-group">
      <label for="user">User Name</label>
      {{input value=user id="user"}}
    </div>
    <div class="form-group">
      <label for="content">Comment</label>
      {{input value=content id="content"}}
    </div>
    <button class="btn"{{action 'saveComment'}}>Post Comment</button>
  </form>
</div>
{{else}}
  <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
