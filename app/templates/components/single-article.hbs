<div class="well">
  <div class="row">
    <div class="articleTitle">
      <h2><strong>{{model.title}}</strong></h2>
      <h3 class="subtitleFont">{{model.subtitle}}</h3>
      <h4>By: <span>{{model.author}}</span></h4>
      <hr>
      <img class="articleImage"src={{model.image}} alt={{model.title}} />
      <br>
      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <h4>{{model.content}}</h4>
        </div>
        <div class="container">
          <div class="row">
            <div class="col-md-offset-4 col-md-4">
              <form>
                <button class="btn"{{action 'delete' model}}>Delete</button>
              </form>
              <br>
              {{update-article model=model update="update"}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="well">
  <div class="row articleTitle">
    <div class="col-md-offset4 col.md-4">
      <br>
      <h2>Comments</h2>
      <hr>
    </div>
  </div>
  {{#each model.comments as |comment|}}
  <h2>{{comment.user}}:</h2>
   {{comment.content}}
  <br>
  {{/each}}
</div>
